{
  "manifest_version": 2,
  "name": "Petricity",
  "description": "Extensions to talk to your Petricity pet",
  "version": "0.1",
  "minimum_chrome_version": "23",
  "app": {
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    }
  },
  "icons": {
    "128": "icon_128.png"
  },
  "permissions": [
    "serial",
    "*://localhost/*",
    "*://petricity.herokuapp.com/*"
  ],
  "externally_connectable": {
    "matches": [
      "*://localhost/*",
      "*://petricity.herokuapp.com/*"
    ]
  }
}
